page {
  background: #f4eedf;
}
.list-content {
  /* height: 170vw; */
  height: auto;
  width: 100%;
  background-color: #f4eedf;
}
.top-place{
  width: 100%;
  height: 10vw;
  visibility: hidden;
}
.list-word{
  height: 100vw;
  width: 86%;
  background: #fffdf9;
  border-radius: 5px;
  margin-left: 7%;
  overflow: hidden;
}
.list-content-word {
  margin: 10px 20px;
  font-size:0.9em;
  line-height: 32px;
}
.list-title {
  display: block;
  font-size: 0.8em;
  color: #888;
}
.letter-msg {
  font-size: 0.9em;
  color: #888;
  text-align: right;
}
.play {
  width: 80%;
  height: 30px;
  box-shadow: 0px 0px 5px #888;
  margin: 10px 0; 
}
.record {
  width: 100%;
  height: 28vw;
  text-align: center;
}
.recording {
  width: 100%;
  height: 34vw;
  text-align: center;
}
.recordok {
  height: 34vw;
  display: flex;
  justify-content: space-between;
  margin: 0 20%;
}
.link-pic {
  width: 16vw;
  height: 16vw;
  margin: 30px 0 10px 42%;
  background: #dd3d05;
  border-radius: 50%;
}
.link-text {
  font-size: 0.8em;
  color: #888;
  margin-bottom: 30px;
  text-align: center;
}
.record .link-pic-icon {
  width: 80%;
  margin-top: 8%;
}
.recording .link-pic-icon {
  width: 46%;
}
.recordok .link-pic-icon {
  width: 68%;
  margin: 14% 0 10px 14%;
}
.recordok .link-pic {
  margin: 30px 0 10px 0;
}